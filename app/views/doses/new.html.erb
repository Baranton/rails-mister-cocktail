<div class="add-dose-container">
  <div class=form>
    <h2>Add a dose for <%= @cocktail.name  %></h2>

    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <br>
      <div id="add-button-container">
        <%= f.submit "Add dose", class: "btn btn-primary button-dose" %>
      </div>
    <% end %>
  </div>
</div>
