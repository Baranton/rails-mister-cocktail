<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path @cocktail.photo %>')">
  <div class="to-homepage"><%= link_to "Back to cocktails", cocktails_path%></div>
  <div class="banner-content"><%= @cocktail.name %></div>
</div>

<div class="container-doses">

<h2 class="cocktail-title-show"><%= @cocktail.name %></h2>

<h3>Doses</h3>
<div class="font-size">
<%= link_to "Add doses", new_cocktail_dose_path(@cocktail.id)%>
<br><br>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description%></li>
    <%= link_to "Delete", dose_path(dose), method: :delete%> |
    <%= link_to "Edit", edit_cocktail_dose_path(@cocktail, dose) %>
    <br><br>
  <% end %>
  </ul>
  </div>
</div>


