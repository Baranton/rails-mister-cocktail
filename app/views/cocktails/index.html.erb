<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_path('background.jpg')%>)">
  <div class="banner-content">Find our selection of world class cocktails</div>
</div>

<div class="cocktails-title"><h2>Cocktails</h2><%= link_to "Add cocktail", new_cocktail_path%></div>

<div id="cocktails">
  <div class="row">
  <% @cocktails.each do |cocktail| %>
   <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
      <div class="card">
        <div class="card-title"><%= cocktail.name %></div>
        <div class="card-options">
          <%= link_to "Details", cocktail_path(cocktail.id)%> <span class="separator">|</span>
          <%= link_to "Delete", cocktail_path(cocktail.id), method: :delete %>
        </div>
      </div>
    </div>
  <% end%>
</div>



